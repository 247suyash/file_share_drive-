<style>
  .divider:after,
  .divider:before {
    content: "";
    flex: 1;
    height: 1px;
    background: #eee;

  }
</style>
<style>
  .navbar {
    background-color: #1d5ca5;
    position: fixed;
    z-index: 100;
    width: 100%;
  }

  .navbar-nav {
    float: right;
  }

  .navbar-nav .nav-item {
    padding: 0px 10px 0px 10px;
  }

  .navbar .navbar-nav .nav-link {
    color: #fff;
    font-size: 16px;
  }

  .navbar .navbar-nav .nav-link:hover {
    color: #fbc531;
  }

  .navbar .navbar-nav .active>.nav-link {
    color: #fbc531;
  }

  footer a.text-light:hover {
    color: #fed136 !important;
    text-decoration: none;
  }

  footer .cizgi {
    border-right: 1px solid #535e67;
  }

  @media (max-width: 992px) {
    footer .cizgi {
      border-right: none;
    }
  }

  .form-error {
    color: rgb(197, 5, 5);
  }
</style>
<header>
  <!--- Navbar --->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand text-white" href="#"><i class="fa fa-graduation-cap fa-lg mr-2"></i>GOOGLE DRIVE</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nvbCollapse"
        aria-controls="nvbCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nvbCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item pl-1">
            <a class="nav-link" href="/"><i class="fa fa-home fa-fw mr-1"></i>Home</a>
          </li>
          <li class="nav-item active pl-1">
            <a class="nav-link" href="/login"><i class="fa fa-info-circle fa-fw mr-1"></i>Login</a>
          </li>
          <li class="nav-item  pl-1">
            <a class="nav-link" href="/signup"><i class="fa fa-th-list fa-fw mr-1"></i>Signup</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!--# Navbar #-->
</header>
<section class="vh-100">

  <div class="container  py-3   h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-6 ">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid"
          alt="Phone image">
      </div>
      <div class="col-md-6 ">
        <p style="color: green; float: right; font-weight: bolder; padding-right: 40px;">{{success}}</p>

        <form action="/login" method="post">
          <label class="form-error" for="form3Example1c">{{this.errorsMessage}}</label>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input placeholder="Email" type="email" name="email" id="form1Example13"
              class="form-control form-control-lg" />
            <label class="form-error" for="form3Example1c">{{this.errors.email}}</label>

          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input placeholder="Password" type="password" name="password" id="form1Example23"
              class="form-control form-control-lg" />
            <label class="form-error" for="form3Example1c">{{this.errors.password}}</label>

          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Submit button -->
            <button type="submit" class="btn my-3 btn-primary btn-lg btn-block">Signin</button>

          </div>
          <div>

            <a href="/signup"> Create a new account..! </a>
            <a style="float: right;" href="/forget"> Forgot password </a>


          </div>
        </form>
      </div>
    </div>
  </div>
</section>